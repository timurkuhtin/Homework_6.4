@model Cutlery

@{
    ViewBag.Title = "Changing";
}

<div>
            <div class="fs-2 text-center mb-2">Changing</div>
            <form method="post">
                <input
                        type="hidden"
                        class="form-control"
                        name="id"
                        value=@Model.Id
                    />
                <div class="mb-3 w-50 mx-auto">
                    <label class="form-label fs-4">Type</label>
                    <input
                        type="text"
                        class="form-control"
                        name="type"
                        required
                        value="@Model.Type" />
                </div>
                <div class="mb-3 w-50 mx-auto">
                    <label class="form-label fs-4">Price</label>
                    <input
                        type="number"
                        class="form-control"
                        name="price"
                        required
                        value="@Model.Price"
                    />
                </div>
                <div class="mb-3 w-50 mx-auto">
                    <label class="form-label fs-4">Material</label>
                    <input
                        type="text"
                        class="form-control"
                        name="material"
                        required
                        value="@Model.Material" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Save changes
                    </button>
                </div>
            </form>
</div>