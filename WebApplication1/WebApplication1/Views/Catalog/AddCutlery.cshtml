@{
    ViewBag.Title = "Adding";
}

<div>
            <div class="fs-2 text-center mb-2">Adding</div>
            <form method="post">
                <div class="mb-3 w-50 mx-auto">
                    <label class="form-label fs-4">Type</label>
                    <input
                        type="text"
                        class="form-control"
                        name="type"
                        required
                    />
                </div>
                <div class="mb-3 w-50 mx-auto">
                    <label class="form-label fs-4">Price</label>
                    <input
                        type="number"
                        class="form-control"
                        name="price"
                        required
                    />
                </div>
                <div class="mb-3 w-50 mx-auto">
                    <label class="form-label fs-4">Material</label>
                    <input
                        type="text"
                        class="form-control"
                        name="material"
                        required
                    />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Save changes
                    </button>
                </div>
            </form>
        </div>